---
import { Image, Picture } from "@astrojs/image/components";
import { format } from "date-fns";

let date = format(new Date(Astro.props.date), "PPPP, p");
---

<div class="border flex flex-col md:flex-row space-x-2 items-center md:p-2 shadow-sm ">
  <a href={`/article/${Astro.props.slug}`} class="w-full h-full flex items-center justify-center md:block">
    <Image
      src={Astro.props.img}
      alt={Astro.props.heading}
      format="avif"
      fit="cover"
      width={250}
      aspectRatio={3 / 2}
      class="rounded cursor-pointer "
    />
  </a>
  <div class='flex space-y-2 mt-2 flex-col md:block md:mt-0'>
    <h1 class="text-2xl font-semibold cursor-pointer hover:text-red-400">
      <a href={`/article/${Astro.props.slug}`}>{Astro.props.heading}</a>
    </h1>
    <h4 class="text-sm text-gray-500">{date}</h4>
    <p>
      {Astro.props.description}
    </p>
  </div>
</div>
